                        @Html.DisplayFor(model => model.User.Email)
                    </dd>
                </dl>
            </divclass="col-md-7">
        </div>
    </div>
    <div id="project-backing" class="col-md-5">
        @{
            if (User.Identity.IsAuthenticated && Model.StatusId == 2 && Model.BackingPackages.Count > 0)
            {
                <div id="backings-nav">
                    <a asp-Controller="UserBackings" asp-action="Create" asp-route-projectId="@Model.Id" id="btn-user-back-project">Back this project</a>
                </div>
            }
        }
        </>
        @await Html.PartialAsync("/Views/BackingPackages/_IndexPartial.cshtml", Model)
    </div>
</div>
<div class="row col-md-12">
    @if ((await AuthorizationService.AuthorizeAsync(User, Model, "ProjectCreator")).Succeeded)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a><span> | </span>
    }
    <a asp-action="Index">Back to List</a>
</div>
