                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Goal)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Goal)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.AmountGathered)
                    </dt>
                    <dd>
